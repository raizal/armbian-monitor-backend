{
  "name": "stb-dashboard-server",
  "version": "0.1.0",
  "description": "bulk setup wifi setting over node-ssh",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "find": "node src/fetch-stb.js",
    "wifi-set": "node src/change-wifi-configs.js",
    "lan-set": "node src/change-lan-configs.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "server": "node -r dotenv/config src/index.js",
    "start": "tsc & node .",
    "build": "tsc && node bundle.js",
    "init-dev": "pm2 start ./dist --name dev",
    "run-dev": "pm2 start dev",
    "dev": "tsc-watch --onSuccess \"pm2 stop 0 && pm2 start 0\" ",
    "lint": "eslint . --ext .ts",
    "prod": "node built",
    "bundle": "node_modules/.bin/tsc && node_modules/.bin/caxa --input . --output \"./armbian-monitor\" -- \"{{caxa}}/node_modules/.bin/node\" \"{{caxa}}/dist\"",
    "build:cjs": "tsc --module commonjs --target es6 --strict false --outDir dist/cjs"
  },
  "author": "Raizal I.N. Pregnanta",
  "license": "MIT",
  "dependencies": {
    "@types/pouchdb-upsert": "^2.2.6",
    "dotenv": "^14.1.0",
    "express": "^4.17.2",
    "fs": "^0.0.1-security",
    "lodash": "^4.17.21",
    "node-ssh": "^12.0.2",
    "p-queue": "6.6.2",
    "pouchdb": "^7.2.2",
    "pouchdb-find": "^7.2.2",
    "pouchdb-upsert": "^2.2.0",
    "socket.io": "^4.4.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.16",
    "@types/pouchdb": "^6.4.0",
    "@types/pouchdb-find": "^6.3.7",
    "@types/set-interval-async": "^1.0.0",
    "@types/ssh2": "^0.5.51",
    "@types/ssh2-streams": "^0.1.9",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "caxa": "^2.1.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.5"
  }
}
